<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!-- Selection Menu -->
<UI name="Selection Menu">

	<!-- Background -->
	<Component type="Image">
		<file name="new_game.jpg" /> 
		<position x="0" y="0" align="none" />
		<visible value="true" />
	</Component>
	
	<!-- Selection Bar -->
	<Component type="Image">
		<file name="selection_bar.png" /> 
		<position x="32" y="-12" align="center" />
		<visible value="true" />
	</Component>
	
	<!-- Buttons -->
	
	<!-- Start Game -->
	<Component type="Button">
		<name value="Start Game" />
		<file normal="start_game_n.png" hover="start_game_o.png" /> 
		<position x="-210" y="210" align="center" />
		<visible value="true" />
		<action name="start_game()" />
	</Component>
	
	<!-- Tower related -->
	<Component type="Button">
		<name value="Increase" />
		<file normal="inc_n.png" hover="inc_o.png" /> 
		<position x="-90" y="-15" align="center" />
		<visible value="true" />
		<action name="increase_tower_size()" />
	</Component>

	<Component type="Button">
		<name value="Decrease" />
		<file normal="dec_n.png" hover="dec_o.png" /> 
		<position x="-230" y="-15" align="center" />
		<visible value="true" />
		<action name="decrease_tower_size()" />
	</Component>
	
	<!-- Scrollbar Buttons -->
	<Component type="Button">
		<name value="Scroll Up" />
		<file normal="mini_inc_n.png" hover="mini_inc_o.png" /> 
		<position x="150" y="-40" align="center" />
		<visible value="true" />
		<action name="scroll_up()" />
	</Component>

	<Component type="Button">
		<name value="Scroll Down" />
		<file normal="mini_dec_n.png" hover="mini_dec_o.png" /> 
		<position x="150" y="100" align="center" />
		<visible value="true" />
		<action name="scroll_down()" />
	</Component>
	
	<!-- Texts -->
	
	<!-- Tower Size (Difficulty) -->
	<Component type="Text">
		<name value="Tower Size" />
		<caption value="100" /> 
		<font size="68" />
		<color r="255" g="255" b="255" />
		<position x="-170" y="-23" align="center" />
		<visible value="true" />
	</Component>

	<!-- Static Metadata Text -->
	<Component type="Text">
		<name value="Meta Static Name" />
		<caption value="Name: " /> 
		<font size="16" />
		<color r="255" g="255" b="255" />
		<position x="40" y="+154" align="center" />
		<visible value="true" />
	</Component>
	
	<Component type="Text">
		<name value="Meta Static Author" />
		<caption value="Created by:" /> 
		<font size="16" />
		<color r="255" g="255" b="255" />
		<position x="40" y="+172" align="center" />
		<visible value="true" />
	</Component>
	
	<Component type="Text">
