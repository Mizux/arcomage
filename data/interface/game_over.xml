<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!-- Game Over Screen -->
<UI name="Game Over">

	<!-- Background -->
	<Component type="Image">
		<file name="game_over.jpg" /> 
		<position x="0" y="0" align="none" />
		<visible value="true" />
	</Component>

	<!-- Buttons -->
	<Component type="Button">
		<name value="Game Over Main Menu" />
		<file normal="mainmenu_n.png" hover="mainmenu_o.png" /> 
		<position x="-100" y="150" align="center" />
		<visible value="true" />
		<action name="main_menu()" />
	</Component>
	
	<!-- Text -->
	<Component type="Text">
		<name value="Game Over Title" />
		<caption value="game_over_text" /> 
		<font size="44" />
		<color r="0" g="0" b="0" />
		<position x="-70" y="0" align="center" />
		<visible value="true" />
	</Component>

	<Component type="Text">
		<name value="Game Over Text" />
		<caption value="text" /> 
		<font size="18" />
		<color r="0" g="0" b="0" />
		<position x="-135" y="82" align="center" />
		<visible value="true" />
	</Component>
</UI>
